extends layout

block content
  h1 #{title}: #{category.name}
  p= category.lifespan
  
  if category_quotes.length
  
    p #[strong Delete the following quotes before attempting to delete this category.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Quotes
    
      dl
      each quote in category_quotes
        dt 
          a(href=quote.url) #{quote.category}
        dd #{quote.content}

  else
    p Do you really want to delete this Category?
    
    form(method='POST' action='')
      div.form-group
        input#categoryid.form-control(type='hidden',name='categoryid', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete